<form method='post' action='/'>
<input type='text' name='twitter_user_name'placeholder='@username'>
<input type='submit' value='Submit'>
</form>

<% if @twitter_access_token %>
  <div class='twitter_login'>
    <p>
      <strong>token:</strong> <%= @twitter_access_token.token %><br>
      <strong>secret:</strong> <%= @twitter_access_token.secret %><br>
    </p>
  </div>
<% else %>
  <button><a href="/twitter/sign_in">Sign In with Twitter</a></button>
<% end %>